<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- API Access Log Appender -->
    <appender name="ACCESS_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/access.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DB Operations Log Appender - JSON -->
    <appender name="DB_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/database.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/database.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSX}","level":"INFO","logger":"database","message":%msg}%n</pattern>
        </encoder>
    </appender>


    <!-- Cache Log Appender - JSON -->
    <appender name="CACHE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/cache.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/cache.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSX}","level":"INFO","logger":"cache","message":%msg}%n</pattern>
        </encoder>
    </appender>

    <!-- Application Log Appender - JSON -->
    <appender name="APP_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSX}","level":"%level","thread":"%thread","logger":"%logger{36}","message":"%msg"}%n</pattern>
        </encoder>
    </appender>

    <!-- API Access Logger - No console output, only file -->
    <logger name="forex.logging.AccessLogger" level="INFO" additivity="false">
        <appender-ref ref="ACCESS_LOG" />
    </logger>

    <!-- Database Operations Logger - No console output, only file -->
    <logger name="forex.logging.DbLogger" level="INFO" additivity="false">
        <appender-ref ref="DB_LOG" />
    </logger>


    <!-- Cache Logger - No console output, only file -->
    <logger name="forex.logging.CacheLogger" level="INFO" additivity="false">
        <appender-ref ref="CACHE_LOG" />
    </logger>

    <!-- Root logger - Catches all logs not handled by specific loggers -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APP_LOG" />
    </root>

    <!-- Application-specific logger - All forex application logs -->
    <logger name="forex" level="DEBUG">
        <!-- This will write to APP_LOG via root logger -->
    </logger>
    
    <!-- Http4s loggers -->
    <logger name="org.http4s" level="WARN" />
    <logger name="org.http4s.server.blaze" level="WARN" />
    <logger name="org.http4s.blaze.channel" level="WARN" />
    
    <!-- Reduce noise from libraries -->
    <logger name="io.netty" level="WARN" />
    <logger name="org.asynchttpclient" level="WARN" />
</configuration>

